<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itender.system.mapper.PermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.itender.system.entity.Permission">
        <id column="id" property="id" />
        <result column="label" property="label" />
        <result column="parent_id" property="parentId" />
        <result column="parent_name" property="parentName" />
        <result column="code" property="code" />
        <result column="path" property="path" />
        <result column="name" property="name" />
        <result column="url" property="url" />
        <result column="type" property="type" />
        <result column="icon" property="icon" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="remark" property="remark" />
        <result column="order_num" property="orderNum" />
        <result column="is_delete" property="isDelete" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, label, parent_id, parent_name, code, path, name, url, type, icon, create_time, update_time, remark, order_num, is_delete
    </sql>

    <select id="findPermissionListByUserId" resultMap="BaseResultMap">
        SELECT DISTINCT
            p.id,
            p.parent_id,
            p.label,
            p.`code`,
            p.url,
            p.type,
            p.icon,
            p.remark,
            p.path,
            p.name
        FROM
            sys_user u
                LEFT JOIN sys_user_role ur ON u.id = ur.user_id and u.is_delete = 0
                LEFT JOIN sys_role r ON ur.role_id = r.id
                LEFT JOIN sys_role_permission rp ON rp.role_Id = r.id
                LEFT JOIN sys_permission p ON rp.permission_Id = p.id and p.is_delete = 0
        WHERE u.id = #{userId}
        ORDER BY p.id
    </select>

    <select id="findPermissionListByRoleId" resultMap="BaseResultMap">
        select *
        from sys_permission t1
                 inner join sys_role_permission t2 on t2.permission_id = t1.id
        where t2.role_id = #{roleId}
          and t1.is_delete = 0
    </select>
</mapper>
